div.input-container(d-elem="inputContainer")
  d-if(if="{args.validators}")
    span.validate-error
      | {args.showErrorMessage ? i18n.t(args.i18nModule + '.validations.' + (error ? error.message : args.error)) : ''}
    div.input-container2
      d-block
      label.validate-icon-container(for="{labelFor}")
        i.fa(
          d-class(fa-times)="{changed && (error || args.error)}"
          d-class(fa-check)="{changed && !error && !args.error}"
        )
  d-else
    d-block
