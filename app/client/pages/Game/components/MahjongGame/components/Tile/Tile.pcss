.root {
  display: inline-block;
  flex-shrink: 0;
  user-select: none;
}

.tile {
  position: relative;
  padding: 5% 4% 5% 6%;
  border: solid #000;
  overflow: hidden;
  filter: brightness(100%);
  transition: all 0.1s ease-in-out;

  &.selected {
    border-color: lime;
    filter: brightness(97%);
    z-index: 1;
  }

  &.clickable {
    cursor: pointer;
  }

  &.hoverable {
    &:hover {
      border-color: #f00;
      filter: brightness(95%);
    }
  }
}

.back, .content {
  width: 100%;
  height: 100%;
}

.content {
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.hint {
  position: absolute;
  top: 2%;
  left: 2%;
  pointer-events: none;
  color: #f00;
  font-weight: bold;
}
