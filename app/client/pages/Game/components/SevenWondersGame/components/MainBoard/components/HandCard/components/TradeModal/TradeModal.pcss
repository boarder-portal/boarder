.title {
  text-align: center;
}

.container {
  min-width: 500px;
}

.head {
  margin-top: 20px;
}

.variants {
  margin-top: 8px;
}

.tradeVariant {
  border-radius: 8px;
  cursor: pointer;
  padding: 12px 20px;
  margin: 0 -20px;

  & > div {
    flex: 0 0 33.33%;

    &:nth-child(2) {
      justify-content: center;
    }
  }

  &:hover {
    background: #eee;
  }
}
