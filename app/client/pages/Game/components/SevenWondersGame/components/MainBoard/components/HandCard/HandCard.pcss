.cardWrapper {
  transition: 200ms;
  position: relative;
}

.actions {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20px;
  opacity: 0;
  pointer-events: none;
  transition: 200ms;
  color: white;
  cursor: pointer;
  text-shadow: 1px 1px 2px black;

  & > div {
    color: white;
    font-size: 14px;
    text-align: center;
    cursor: pointer;
    text-shadow: 1px 1px 2px black;

    &:not(:first-child) {
      margin-top: 20px;
    }
  }
}

.root {
  &.isChosen {
    .cardWrapper {
      box-shadow: green 0 5px 15px;
      z-index: 22;
    }
  }

  &.isDisabled {
    .cardWrapper {
      &::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(220, 220, 220, 0.6);
      }
    }
  }

  &:not(.isDisabled) {
    .cardWrapper {
      &:hover {
        transform: translateY(-100px);
        z-index: 21;

        .actions {
          opacity: 1;
          pointer-events: all;
          z-index: 30;
        }
      }
    }
  }
}
