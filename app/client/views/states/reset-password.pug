mixin input-container(attrs)
  div.input-container
    if attrs.type !== 'submit'
      span.validate-error
      div.input-container2
        input.boarder-input&attributes(attrs)
        label.validate-icon-container(for=attrs.id)
          i.fa
    else
      input.boarder-input&attributes(attrs)

div.auth-block.reset-password-block
  h2.auth-header= i18n.t('reset_password.header')
  form.auth-form.reset-password-form(autocomplete='off')
    div.auth-spinner-container
      div.wrong-email-caption.hidden= i18n.t('reset_password.wrong_email')
    +input-container({
      id: 'email',
      type: 'text',
      value: email,
      disabled: ''
    })
    +input-container({
      id: 'password',
      type: 'password',
      name: 'password',
      placeholder: i18n.t('reset_password.fields.password')
    })
    +input-container({
      id: 'password-repeat',
      type: 'password',
      name: 'password-repeat',
      placeholder: i18n.t('reset_password.fields.password_repeat')
    })
    +input-container({
      class: 'success',
      type: 'submit',
      value: i18n.t('reset_password.action')
    })
  div.auth-success-caption.hidden= i18n.t('reset_password.success')
