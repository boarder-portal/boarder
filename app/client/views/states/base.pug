-
  const languages = [
    {
      lang: 'en',
      caption: 'English'
    },
    {
      lang: 'ru',
      caption: 'Русский'
    }
  ];
  const lastLang = languages.pop();

mixin langLink(params)
  -
    const { lang, caption } = params;
    const attrs = lang === i18n.locale ? { class: 'active' } : { href: '' };

  a(data-lang=lang).language&attributes(attrs)= caption

header.main-header
  h1.header-caption
    a(href=headerParams.homeLink)= i18n.t('header.home_link')
  span.register-link
    a(href=headerParams.registerLink)= i18n.t('header.register_link')
  span.login-link
    a(href=headerParams.loginLink)= i18n.t('header.login_link')

div.main-content
  div.alerts
  div(dwayne-router-state="404").not-found-state
  div(dwayne-router-state="home")
  div(dwayne-router-state="auth").auth-state
  div(dwayne-router-state="games")

footer.main-footer
  div.languages
    each params in languages
      +langLink(params)
      a.empty!= '&nbsp;'
    +langLink(lastLang)
