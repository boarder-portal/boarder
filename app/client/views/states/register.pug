mixin input-container(attrs)
  div.input-container
    if attrs.type !== 'submit'
      span.validate-error
      div.input-container2
        input.boarder-input&attributes(attrs)
        label.validate-icon-container(for=attrs.id)
          i.fa
    else
      input&attributes(attrs)

div.register-block
  span.register-caption= registerCaption
  form.register-form
    div.register-spinner-container
    +input-container({
      id: 'login',
      type: 'login',
      name: 'login',
      placeholder: loginCaption,
      required: ''
    })
    +input-container({
      id: 'email',
      type: 'email',
      name: 'email',
      placeholder: emailCaption,
      required: ''
    })
    +input-container({
      id: 'password',
      type: 'password',
      name: 'password',
      placeholder: passwordCaption,
      required: ''
    })
    +input-container({
      id: 'password-repeat',
      type: 'password',
      name: 'password-repeat',
      placeholder: passwordRepeatCaption,
      required: ''
    })
    +input-container({
      class: 'success',
      type: 'submit',
      value: registerActionCaption
    })
  div.register-success-caption.hidden= registerSuccessCaption
