mixin input-container(attrs)
  div.input-container
    if attrs.type !== 'submit'
      span.validate-error
      div.input-container2
        input.boarder-input&attributes(attrs)
        label.validate-icon-container(for=attrs.id)
          i.fa
    else
      input.boarder-input&attributes(attrs)

div.auth-block.register-block
  span.auth-header= registerHeaderCaption
  form.auth-form.register-form(autocomplete='off')
    div.auth-spinner-container
    +input-container({
      id: 'login',
      type: 'text',
      name: 'login',
      placeholder: loginCaption,
      required: ''
    })
    +input-container({
      id: 'email',
      type: 'email',
      name: 'email',
      placeholder: emailCaption,
      required: ''
    })
    +input-container({
      id: 'password',
      type: 'password',
      name: 'password',
      placeholder: passwordCaption,
      required: ''
    })
    +input-container({
      id: 'password-repeat',
      type: 'password',
      name: 'password-repeat',
      placeholder: passwordRepeatCaption,
      required: ''
    })
    +input-container({
      class: 'success',
      type: 'submit',
      value: registerActionCaption
    })
  div.auth-success-caption.register-success-caption.hidden= registerSuccessCaption
