mixin input-container(attrs)
  input.boarder-input&attributes(attrs)

div.auth-block.forgot-password-block
  span.auth-header= i18n.t('forgot_password.header')
  form.auth-form.forgot-password-form
    div.auth-spinner-container
      div.check-email-caption.hidden= i18n.t('forgot_password.try_again')
    +input-container({
      id: 'email',
      type: 'text',
      name: 'email',
      placeholder: i18n.t('forgot_password.fields.email')
    })
    +input-container({
      class: 'success',
      type: 'submit',
      value: i18n.t('forgot_password.action')
    })
  div.auth-success-caption.hidden
    span= i18n.t('forgot_password.success')
    span= ' '
    b.send-to-email
