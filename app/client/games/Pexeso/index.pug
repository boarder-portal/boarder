div.field
  d-each(set="{field}", item="row", index="y", uid="{y}")
    div.cards-row
      d-each(set="{row}", item="card", index="x", uid="{x}")
        div.card-container
          d-if(if="{card.isInPlay}")
            img.card(
              d-on-load="{onCardLoaded(card)}"
              d-on-error="{onCardLoaded(card)}"
              src="{card.isTurned ? '/public/images/pexeso/sets/' + options.set + '/' + card.card + '.jpg' : backImage}"
              d-on-click="{turnCard(x, y)}"
            )
