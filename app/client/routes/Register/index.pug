div.auth-block.register-block
  h2.auth-header {i18n.t('register.header')}
  form.auth-form.register-form(autocomplete="off")
    div.auth-spinner-container
    InputWrapper(validate="{true}", id="login")
      input.boarder-input(
        id="login"
        type="text"
        name="login"
        placeholder="{i18n.t('register.fields.login')}"
        invalid="{loginErrorMessage}"
        d-bind-input="{onInput}"
        d-bind-validate="{onInputValidate}"
        d-validate-required="{requiredValidator}"
        validate="{true}"
      )
    InputWrapper(validate="{true}", id="email")
      input.boarder-input(
        id="email"
        type="text"
        name="email"
        placeholder="{i18n.t('register.fields.email')}"
        invalid="{emailErrorMessage}"
        d-bind-input="{onInput}"
        d-bind-validate="{onInputValidate}"
        d-validate-required="{requiredValidator}"
        d-validate-email="{emailValidator}"
        validate="{true}"
      )
    InputWrapper(validate="{true}", id="password")
      input.boarder-input(
        id="password"
        type="password"
        name="password"
        placeholder="{i18n.t('register.fields.password')}"
        invalid="{passwordErrorMessage}"
        d-bind-input="{onInput}"
        d-bind-validate="{onInputValidate}"
        d-validate-required="{requiredValidator}"
        d-validate-password-repeat="{passwordRepeatValidator}"
        validate="{true}"
      )
    InputWrapper(validate="{true}", id="password-repeat")
      input.boarder-input(
        id="password-repeat"
        type="password"
        name="password-repeat"
        placeholder="{i18n.t('register.fields.password_repeat')}"
        invalid="{passwordRepeatErrorMessage}"
        d-bind-input="{onInput}"
        d-bind-validate="{onInputValidate}"
        d-elem="passwordRepeatInput"
        d-validate-required="{requiredValidator}"
        validate="{true}"
      )
    InputWrapper
      input.boarder-input(
        class="success"
        type="submit"
        value="{i18n.t('register.action')}"
      )
  div.auth-success-caption.hidden
    span {i18n.t('register.success') + ' '}
    b.send-to-email
    p.send-one-more.linky {i18n.t('register.send_one_more_time')}
