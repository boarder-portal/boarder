.trigger {
  cursor: pointer;
}

.popup {
  position: absolute;
  top: 100%;
  display: none;
  border-radius: 4px;
  box-shadow: 0 3px 3px -2px rgb(0 0 0 / 20%),
              0 3px 4px 0 rgb(0 0 0 / 14%),
              0 1px 8px 0 rgb(0 0 0 / 12%);
  margin-top: 4px;

  &.visible {
    display: block;
  }

  &.bottomLeft {
    left: 0;
  }

  &.bottomCenter {
    left: 50%;
    transform: translateX(-50%);
  }

  &.bottomRight {
    right: 0;
  }
}

.root {
  position: relative;
}
