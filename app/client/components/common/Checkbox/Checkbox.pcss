.box {
  width: 20px;
  height: 20px;
  border: 2px solid #666;
  border-radius: 4px;
}

.checkIcon {
  /* TODO: Убрать !important после удаления mui иконок */
  width: 18px !important;
  height: 18px !important;
}

.root {
  cursor: pointer;

  &.disabled {
    opacity: 0.4;
    pointer-events: none;
  }

  &:hover {
    .box {
      background: #eee;
    }
  }
}
