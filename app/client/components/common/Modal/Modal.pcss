.overlay {
  display: none;
  position: fixed;
  padding: 40px;
  inset: 0;
  background: rgba(0, 0, 0, 0.5);

  &.open {
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1000;
  }
}

.container {
  overflow: auto;
  max-height: 100%;
  padding: 12px 24px;
  background: white;
  border-radius: 8px;
}
