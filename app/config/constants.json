{
  "io": {
    "livereloadNsp": "/livereload",
    "hexagonNsp": "/hexagon",
    "hexagonLobbyNsp": "/hexagon/lobby",
    "hexagonRoomNsp": "/hexagon/room/$roomId"
  },
  "assetsPath": "/public",
  "endpoints": {
    "base": "/api",
    "users": {
      "base": "/users",
      "checkLogin": {
        "base": "/check-login",
        "method": "get"
      },
      "checkEmail": {
        "base": "/check-email",
        "method": "get"
      },
      "register": {
        "base": "/register",
        "method": "post"
      },
      "login": {
        "base": "/login",
        "method": "post"
      }
    }
  },
  "games": {
    "global": {
      "roomStatuses": {
        "NOT_PLAYING": 0,
        "PLAYING": 1
      },
      "playerStatuses": {
        "PLAYER": 0,
        "OBSERVER": 1
      },
      "events": {
        "lobby": {
          "GET_LIST": "list/get",
          "NEW_ROOM": "room/new",
          "UPDATE_ROOM": "room/update",
          "DELETE_ROOM": "room/delete"
        }
      }
    },
    "hexagon": {
      "lobbyNsp": "/hexagon/lobby",
      "roomNsp": "hexagon/room/$roomId"
    }
  }
}
