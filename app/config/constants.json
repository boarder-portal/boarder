  "VENDOR_PATH": "/vendor",
  "endpoints": {
    "base": "/api",
    "users": {
      "base": "/users",
      "checkLogin": {
        "base": "/check-login",
        "method": "get"
      },
      "checkEmail": {
        "base": "/check-email",
        "method": "get"
      },
      "register": {
        "base": "/register",
        "method": "post"
      },
      "login": {
        "base": "/login",
        "method": "post",
        "session": true
      },
      "confirmRegister": {
        "base": "/confirm-register",
        "method": "get"
      },
      "sendOneMore": {
        "base": "/send-one-more",
        "method": "get",
        "session": true
      },
      "forgotPassword": {
        "base": "/forgot-password",
        "method": "get"
      },
      "resetPassword": {
        "base": "/reset-password",
        "method": "post"
      },
      "logout": {
        "base": "/logout",
        "method": "get",
        "session": true
      },
      "changePassword": {
        "base": "/change-password",
        "method": "post",
        "auth": true
      }
    },
    "user": {
      "base": "/user",
      "uploadAvatar": {
        "base": "/upload-avatar",
        "method": "post",
        "auth": true,
        "files": {
          "type": "single",
          "opts": ["avatar"]
        }
      },
      "changeAvatar": {
        "base": "/change-avatar",
        "method": "put",
        "auth": true
      },
      "getAllAvatars": {
        "base": "/get-all-avatars",
        "method": "get",
        "auth": true
      }
    },
    "avatar": {
      "base": "/avatar",
      "delete": {
        "base": "/delete",
        "method": "delete",
        "auth": true
      }
    },
    "lang": {
      "base": "/lang",
      "change": {
        "base": "/change",
        "method": "put",
        "session": true
      }
    }
  },
  "games": {
    "global": {
      "roomStatuses": {
        "NOT_PLAYING": "not_playing",
        "PREPARING": "preparing",
        "PLAYING": "playing"
      },
      "playerRoles": {
        "OBSERVER": 0,
        "PLAYER": 1
      },
      "events": {
        "lobby": {
          "GET_LIST": "list/get",
          "NEW_ROOM": "room/new",
          "UPDATE_ROOM": "room/update",
          "DELETE_ROOM": "room/delete"
        },
        "room": {
          "ENTER_ROOM": "room/enter",
          "UPDATE_ROOM": "room/update",
          "TOGGLE_PLAYER_STATUS": "player/toggle-status"
        },
        "game": {
          "PREPARING_GAME": "game/preparing",
          "GAME_STARTED": "game/started",
          "UPDATE_PLAYERS": "game/update-players",
          "UPDATE_GAME": "game/update-game",
          "END_TURN": "game/end-turn"
        }
      }
    },
    "hexagon": {
      "LOBBY_NSP": "/hexagon/lobby",
      "ROOM_NSP": "/hexagon/room/$roomId",
      "playersCount": 3
    },
    "pexeso": {
      "LOBBY_NSP": "/pexeso/lobby",
      "ROOM_NSP": "/pexeso/room/$roomId",
      "playersCount": 4,
      "events": {
        "game": {
          "TURN_CARD": "pexeso/turn-card",
          "CARDS_LOADED": "pexeso/cards-loaded"
        }
      },
      "sets": [
        "0",
        "potc",
        "lost",
        "sw",
        "got",
        "poker",
        "hp"
      ]
    },
    "virus_war": {
      "LOBBY_NSP": "/virus-war/lobby",
      "ROOM_NSP": "/virus-war/room/$roomId",
