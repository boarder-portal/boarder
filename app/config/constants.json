      "events": {
        "game": {
          "SET_CELL": "virus-war/set-cell"
        }
      },
      "virusesTypes": {
        "VIRUS": "virus",
        "FORTRESS": "fortress"
      },
      "virusesShapes": {
        "CIRCLE": "circle",
        "RECT": "rect"
      }
    },
    "filler": {
      "LOBBY_NSP": "/filler/lobby",
      "ROOM_NSP": "/filler/room/$roomId",
