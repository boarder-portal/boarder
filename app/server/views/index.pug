html(lang=lang)
  head
    link(
      type="text/css"
      rel="stylesheet"
      href=allCSS
    )
    title.title
    link.icon(
      type="image/png"
      rel="shortcut icon"
    )
  body
    if NODE_ENV === 'development'
      div#livereload
    div.app-root
    script(type="text/javascript").
      window.boarderUser = '#{ user }';
    script(
      type="text/javascript"
      src=i18n
    )
    script(
      type="text/javascript"
      src=allJS
    )
