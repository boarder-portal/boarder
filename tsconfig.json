{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "strict": true,
    "outDir": "./dist",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "server/*": ["./app/server/*"],
      "client/*": ["./app/client/*"],
      "common/*": ["./app/common/*"]
    }
  },
  "include": ["./app/**/*", "./scripts/**/*", "./test/**/*"],
  "exclude": ["**/node_modules/*", "**/build/*", "**/.cache/*", "**/dist/*"]
}
