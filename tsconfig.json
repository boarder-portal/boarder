{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "strict": true,
    "outDir": "./dist",
    "jsx": "react",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "server/*": ["./app/server/*"],
      "client/*": ["./app/client/*"],
      "common/*": ["./app/common/*"]
    }
  },
  "include": [
    "./app/**/*"
  ],
  "exclude": [
    "**/node_modules/*",
    "**/build/*",
    "**/.cache/*",
    "**/dist/*"
  ]
}
